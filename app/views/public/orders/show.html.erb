<h1>注文履歴詳細</h1>
<h3>注文情報</h3>
<div>
  <table>
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>支払方法</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @order.created_at %></td>
        <td>
          <%= @order.postal_code %>
          <%= @order.address %>
          <%= @order.name %>
        </td>
        <td><%= @order.payment_method_i18n %></td>
        <td><%= @order.status %></td>
      </tr>
    </tbody>
  </table>
</div>

<h3>請求金額</h3>
<div>
  <table>
    <thead>
      <tr>
        <th>商品合計</th>
        <th>配送料</th>
        <th>ご請求額</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @cart_items.sum(&:subtotal) %></td>
        <td><%= @order.shipping_cost %></td>
        <td><%= @order.total_payment %></td>
      </tr>
    </tbody>
  </table>
</div>

<h3>注文内容</h3>
<div>
    <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>