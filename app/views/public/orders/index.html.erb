<h1>注文履歴一覧</h1>
<div>
  <table>
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td>
          <%= order.postal_code %>
          <%= order.address %>
          <%= order.name %>
        </td>
        <td>
          <div>
            <% @cart_items.each do |cart_item| %>
              <%= cart_item.item.name %>
            <% end %>
          </div>
        </td>
        <td><%= order.total_payment %></td>
        <td><%= order.status %></td>
        <td><%= link_to "注文詳細", order_path(order.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>