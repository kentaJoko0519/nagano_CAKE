<h1>商品新規登録</h1>

<%= form_with model: @item, url: admin_items_path do |f| %>
  <div>
    <label>商品画像</label>
    <%= f.file_field :item_image, placeholder: "プロフィール画像", accept: "image/*" %>
  </div>

  <div>
    <label>商品名</label>
    <%= f.text_field :name, placeholder: "商品名" %>
  </div>

  <div>
    <label>商品説明</label>
    <%= f.text_field :introduction, placeholder: "ここに説明文を記述します" %>
  </div>

  <div>
    <label>ジャンル</label>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
  </div>

  <div>
    <label>税抜価格</label>
    <%= f.text_field :price, placeholder: "1000" %> 円
  </div>

  <div>
    <label>販売ステータス</label>
    <%= f.radio_button :is_active, :true %>販売中
    <%= f.radio_button :is_active, :false %>販売停止中
  </div>

  <div>
    <%= f.submit '新規登録' %>
  </div>

<% end %>