<div class="container">
  <div class="row">
    <div class="col-md-2 mt-4 mb-5 bg-secondary text-center text-light h3", style="margin-left:50px;">
       <h5>商品新規登録</h5>
    </div>
  </div>
  <div class="row", style="margin-left: 300px;">
    <div class="col">
      <%= form_with model: @item, url: admin_items_path do |f| %>
      <table class="col-md-8">
        <tr>
          <td>商品画像</td>
          <td><%= f.file_field :item_image, placeholder: "プロフィール画像", accept: "image/*" %></td>
        </tr>
        <tr>
          <td>商品名</td>
          <td><%= f.text_field :name, placeholder: "商品名" %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= f.text_field :introduction, placeholder: "ここに説明文を記述します", style: "width: 300px; height:200px;" %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %></td>
        </tr>
        <tr>
          <td>税抜価格</td>
          <td><%= f.text_field :price, placeholder: "1000", style: "width: 300px;" %> 円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <%= f.radio_button :is_active, :true %>販売中
            <%= f.radio_button :is_active, :false %>販売停止中
          </td>
        </tr>
      </table>
      <div class="row">
        <div class="col mt-3">
          <%= f.submit '新規登録', class: "btn btn-success", style: "margin-left:150px;"  %>
        </div>
      </div>  
      <% end %>
    </div>
  </div>
</div>