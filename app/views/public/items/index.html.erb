<h1>商品一覧</h1><p>(全<%= @items.count%>件)</p>

<% @items.each do |item| %>
  <div>
    <%= link_to (image_tag item.get_item_image(100,100)), item_path(item.id) %>
  </div>
  <div>
    <%= link_to item.name, item_path(item.id) %>
  </div>
  <div>
    ¥<%= item.price %>
  </div>
<% end %>

<%= paginate @items %>