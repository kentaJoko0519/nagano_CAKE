<div class="container">
  <div class="row">
    <div class="col-md-4 mt-4 bg-secondary text-center text-light h3", style="margin-left:50px;">
       <h5>ジャンル編集</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6  mt-5">
      <%= form_with model: @genre,url: admin_genre_path, method: :patch do |f| %>
        <table class="table table-borderless">
          <tr>
            <td>ジャンル</td>
            <td style="margin-left:3-px;"><%= f.text_field :name %></td>
            <td style="margin-left:3-px;"><%= f.submit '変更を保存', class: "btn btn-success" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>