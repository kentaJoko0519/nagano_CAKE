<div class="container">
  <div class="row">
    <div class="col-md-2 mt-2 bg-secondary text-center text-light h3", style="margin-left:50px;">
       <h5>商品一覧</h5>
    </div>
    <div class="col mt-2">
      <%= link_to"商品新規登録",new_admin_item_path, style: "margin-left:500px;" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10">
      <table class="table table-borderless table-sm">
        <thead>
          <tr class="table-secondary">
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @items.each do |item| %>
          <tbody>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item.id) %></td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td>
                <% if item.is_active %>
                  <p>販売中</p>
                <% else %>
                  <p>販売停止中</p>
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row mx-auto">
    <div class="col-md-12">
      <%= paginate @items %>
    </div>
  </div>
</div>