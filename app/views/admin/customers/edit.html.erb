<h1><%= @customer.first_name+@customer.last_name %>さんの会員情報編集</h1>
<%= form_with model: @customer,url: admin_customer_path, method: :patch do |f| %>
  <div>
    <p>氏名</p>
    <%= f.text_field :first_name %>  <%= f.text_field :last_name %>
  </div>

  <div>
    <p>フリガナ</p>
    <%= f.text_field :first_name_kana %>  <%= f.text_field :last_name_kana %>
  </div>

  <div>
    <p>郵便番号</p>
    <%= f.text_field :postal_code %>
  </div>

  <div>
    <p>住所</p>
    <%= f.text_field :address %>
  </div>

  <div>
    <p>電話番号</p>
    <%= f.text_field :telephone_number %>
  </div>

  <div>
    <p>メールアドレス</p>
    <%= f.text_field :email %>
  </div>

  <div>
    <p>会員ステータス</p>
    <%= f.radio_button :is_deleted, :false %>有効
    <%= f.radio_button :is_deleted, :true %>退会
  </div>

  <div>
    <%= f.submit'変更を保存' %>
  </div>
<% end %>