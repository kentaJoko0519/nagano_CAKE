<h1>ショッピングカート </h1>
<%= link_to"カートを空にする",destroy_all_path, method: :delete,"data-confirm" => "本当に削除しますか？" %>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= image_tag cart_item.item.get_item_image(100,100) %><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price%></td>
        <td>
        <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do  |f| %>
          <%= f.select :amount, *[1..5] %>
          <%= f.submit"変更" %>
        <% end %>  
        </td>  
        <td><%= cart_item.subtotal%></td>
        <td><%= link_to"削除する",cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <%= link_to"買い物を続ける",root_path %>
</div>
<div>
  <p>合計金額 <%= @cart_items.sum(&:subtotal) %></p>
</div>
<div>
  <%= link_to "情報入力に進む", new_order_path %>
</div>

