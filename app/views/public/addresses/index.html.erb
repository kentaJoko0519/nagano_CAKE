<h1>配送先登録/一覧</h1>

<%= form_with model: @address, url: addresses_path, method: :post do |f| %>
  <p>郵便番号</p>
  <div>
    <%= f.text_field :postal_code, placeholder: "000000" %>
  </div>
  <p>住所</p>
  <div>
    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町０−０" %>
  </div>
  <p>宛名</p>
  <div>
    <%= f.text_field :name, placeholder: "令和道子" %>
  </div>
  <div>
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address|%>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_address_path(address.id) %></td>
      <td><%= link_to "削除する", address_path(address.id), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>
