<div class="container">
  <div class="row">
    <div class="col-md-2 mt-4 bg-secondary text-center text-light h3", style="margin-left:50px;">
       <h5>注文履歴一覧</h5>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-bordered">
        <thead>
          <tr class="table-secondary align-middle">
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td class="align-middle">
              <%= order.created_at.strftime("%Y/%m/%d") %>
            </td>
            <td class="align-middle">
              〒<%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name %>
            </td>
            <td class="align-middle">
              <% order.order_details.each do |order| %>
                <%= order.item.name %>
              <% end %>
            </td>
            <td class="align-middle"><%= order.total_payment %></td>
            <td class="align-middle"><%= order.status_i18n %></td>
            <td class="col-md-2 align-middle">
              <%= link_to "表示する", order_path(order.id), class: "btn btn-primary", style: "margin-left :30px;" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


