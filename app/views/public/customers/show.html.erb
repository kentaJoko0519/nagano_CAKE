<div class="container">
  <div class="row">
    <div class="col-md-2 mt-4 bg-secondary text-center text-light h3  align-middle", style="margin-left:100px;">
       <h5>マイページ</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 mt-4">
      <h5><strong>登録情報</strong></h5>
    </div>
    <div class="col-md-2 mt-3">
      <%= link_to "編集する",edit_information_customer_path, class: "btn btn-success", style: "width:60%" %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-6">
      <table class="table table-bordered table-sm">
        <tr>
          <td class="table-secondary align-middle">氏名</td>
          <td class="align-middle"><%= @customer.first_name %>  <%= @customer.last_name %></td>
        </tr>
        <tr>
          <td class="table-secondary align-middle">カナ</td>
          <td class="align-middle"><%= @customer.first_name_kana %>  <%= @customer.last_name_kana %></td>
        </tr>
        <tr>
          <td class="table-secondary align-middle">郵便番号</td>
          <td class="align-middle"><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td class="table-secondary align-middle">住所</td>
          <td class="align-middle"><%= @customer.address %></td>
        </tr>
        <tr>
          <td class="table-secondary align-middle">電話番号</td>
          <td class="align-middle"><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td class="table-secondary align-middle">メールアドレス</td>
          <td class="align-middle"><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 mt-4">
      <h5><strong>配送先</strong></h5>
    </div>
    <div class="col-md-2 mt-3">
      <button type="button" class="btn btn-primary"><%= link_to "一覧を見る", addresses_path, class: "text-white" %></button>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 mt-4">
      <h5><strong>注文履歴</strong></h5>
    </div>
    <div class="col-md-2 mt-3">
      <button type="button" class="btn btn-primary"><%= link_to "一覧を見る", orders_path, class: "text-white" %></button>
    </div>
  </div>
</div>