<h1><%= @customer.first_name+@customer.last_name %>さんの会員詳細</h1>
<div>
  <p>会員ID</p>
  <%= @customer.id %>
</div>

<div>
  <p>氏名</p>
  <%= @customer.first_name %> <%= @customer.last_name %>
</div>

<div>
  <p>フリガナ</p>
  <%= @customer.first_name_kana %> <%= @customer.last_name_kana %>
</div>

<div>
  <p>郵便番号</p>
  <%= @customer.postal_code %>
</div>

<div>
  <p>住所</p>
  <%= @customer.address %>
</div>

<div>
  <p>電話番号</p>
  <%= @customer.telephone_number %>
</div>

<div>
  <p>メールアドレス</p>
  <%= @customer.email %>
</div>

<div>
  <p>会員ステータス</p>
  <% if @customer.is_deleted == false %>
    <p>有効</p>
  <% else %>
     <p>退会</p>
   <% end %>
</div>

<%= link_to "編集する", edit_admin_customer_path %>
