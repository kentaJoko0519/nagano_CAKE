<div class="container">
  <div class="row">

    <div class="col my-3 mx-5">

      <div class="col-md-2 my-3 mx-5 bg-secondary text-center text-light">
        <h5>新規会員登録</h5>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
        <div>

          <div class="field">
            <div class="row">
              <div class="col">
                <p>名前</p>
              </div>
              <div class="col">
                (姓)<%= f.text_field :first_name, placeholder: "令和" %>
              </div>
              <div class="col">
                (名)<%= f.text_field :last_name, placeholder: "道子" %>
              </div>
            </div>
          </div>

          <div class="field">
            <div class="row">
              <div class="col">
                <p>フリガナ</p>
              </div>
              <div class="col">
                (姓)<%= f.text_field :first_name_kana, placeholder: "レイワ" %>
              </div>
              <div class="col">
                (名)<%= f.text_field :last_name_kana, placeholder: "ミチコ" %>
              </div>
            </div>
          </div>

          <div class="field">
            <div class="row">
              <div class="col">
                <p>メールアドレス</p>
              </div>
              <div class="col-md-6">
                <%= f.email_field :email, placeholder: "sample@example.com" %>
              </div>
            </div>
          </div>

          <div class="field">
            <div class="row">
              <div class="col">
                <p>郵便番号(ハイフンなし)</p>
              </div>
              <div class="col-md-6">
                <%= f.text_field :postal_code, placeholder: "0000000" %>
              </div>
            </div>
          </div>

          <div class="field">
            <div class="row">
              <div class="col">
                <p>住所</p>
              </div>
              <div class="col-md-6">
                <%= f.text_field :address, placeholder: "東京都渋谷区代々木" %>
              </div>
            </div>
          </div>

          <div class="field">
            <div class="row">
              <div class="col">
                <p>電話番号(ハイフンなし)</p>
              </div>
              <div class="col-md-6">
                <%= f.telephone_field	 :telephone_number, placeholder: "00000000000" %>
              </div>
            </div>
          </div>

          <div class="field">
            <div class="row">
              <div class="col">
                <p>パスワード(６文字以上)</p>
              </div>
              <div class="col-md-6">
                <%= f.password_field :password, autocomplete: "new-password" %>
              </div>
            </div>
          </div>

          <div class="field">
            <div class="row">
              <div class="col">
                <p>パスワード(確認用)</p>
              </div>
              <div class="col-md-6">
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </div>
            </div>
          </div>

        <div>
          <div class="col-md-10 m-3 mx-auto">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
        </div>
      <% end %>

      <div class="col-md-3 mt-5 mb-3 mx-5 bg-secondary text-center text-light">
        <h5>既に登録済みの方</h5>
      </div>

      <div class="col-md-5">
        <p><%= link_to"こちら" ,new_customer_session_path %>からログインしてください。</p>
      </div>

    </div>
  </div>
</div>